{
  "name": "jurisight",
  "version": "1.0.0",
  "description": "AI-powered legal document analysis platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "cd apps/backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd apps/frontend && npm test",
    "test:backend": "cd apps/backend && npm test",
    "db:generate": "cd apps/backend && npx prisma generate",
    "db:push": "cd apps/backend && npx prisma db push",
    "db:migrate": "cd apps/backend && npx prisma migrate dev",
    "db:studio": "cd apps/backend && npx prisma studio",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.11.17",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/jurisight.git"
  },
  "keywords": [
    "legal",
    "ai",
    "document-analysis",
    "law",
    "nlp",
    "rag",
    "contract-analysis"
  ],
  "author": "JuriSight Team",
  "license": "MIT"
}